{
  "include": ["src"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "Bundler",
    "target": "es6",
    "module": "Preserve",
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": ["ES2021.String", "dom", "esnext"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
